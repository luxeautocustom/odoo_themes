    <template id="as_copyright_extend" inherit_id="web.frontend_layout" name="As Copyright Extend" priority="99">
        <xpath expr="//div[hasclass('o_footer_copyright')]/div/div/div[last()]" position="replace"/>
        <xpath expr="//div[hasclass('o_footer_copyright')]/div/div" position="inside">
            <div class="col-12 col-lg-6 d-flex justify-content-center justify-content-lg-end align-items-center">
                <!-- pricelist list -->
                <t t-call="website_sale.pricelist_list">
                    <t t-set="_classes" t-valuef="mr-3"/>
                </t>
                <div class="footer-payment-icon">
                    <img src="/theme_laze/static/src/img/snippets/payment.png" />
                </div>
            </div>
        </xpath>
